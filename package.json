{
  "private": true,
  "scripts": {
    "dc": "docker-compose -f docker-compose.yml -f docker-compose.override.yml",
    "dc:production": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml",
    "dc:production:network": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml -f docker-compose.network.prod.yml",
    "down": "npm run dc -- down -v",
    "down:production": "npm run dc:production -- down -v",
    "down:production:network": "npm run dc:production:network -- down -v",
    "lint:prettier": "prettier --check '**/*.{js,json,css,md,scss,ts,html,yml}'",
    "logs": "npm run dc -- logs -f",
    "logs:production": "npm run dc:production -- logs -f",
    "logs:production:network": "npm run dc:production:network -- logs -f",
    "start": "npm run dc -- up -d",
    "start:production": "npm run dc:production -- up -d",
    "start:production:network": "npm run dc:production:network -- up -d",
    "test": "jest",
    "test:ci": "jest --ci --runInBand --reporters=default --reporters=jest-junit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!middleware/lib/api.js",
      "!processors/src/logger.js"
    ],
    "coverageDirectory": "node_modules/.cache/coverage",
    "roots": [
      "<rootDir>/middleware/",
      "<rootDir>/processors/"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,json,css,md,scss,ts,html,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-junit": "^6.3.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4"
  }
}
